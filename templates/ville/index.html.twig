{% extends 'base.html.twig' %}

{% block title %}Ville{% endblock %}

{% block body %}
    <div class="container bootstrap snippets bootdey">
        <h1 class="text-primary">Ville</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Nom de la ville</th>
                <th>Actions</th>
            </tr>
            </thead>
{#            crée un bouton pour crée une sortie, et que le bouton redirge vers /ajouter#}
<bouton> </bouton>
            <tbody>
            {% for ville in villes %}
                <tr>
                    <td>{{ ville.nom }}</td>
                    <td>
                        <a href="{{ path('modifier_ville', {'id': ville.id}) }}" class="btn btn-primary">Modifier</a>
                        <!-- Ajoutez ici d'autres actions comme la suppression si nécessaire -->
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucune ville n'est disponible.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
