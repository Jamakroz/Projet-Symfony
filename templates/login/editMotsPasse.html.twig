{% extends 'base.html.twig' %}

{% block title %}Modification du Mots de Passe{% endblock %}

{% block body %}
<div class="container bootstrap snippets bootdey">
    <h1 class="text-primary">Gestion du Mots de Passe</h1>
    <hr>
    <div class="row">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.oldPassword, 'Mon mot de passe:', {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
            <div class="col-lg-8">
                {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.newPassword, 'Nouveau Password:', {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
            <div class="col-lg-8">
                {{ form_widget(form.newPassword, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-3 col-lg-8">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
