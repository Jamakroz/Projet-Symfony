{% extends 'base.html.twig' %}

{% block title %}Annuler la sortie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Annuler une sortie</h1>
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form, {'attr': {'class': 'mt-3'}}) }}

                <div class="form-group">
                    {{ form_label(form.motifAnnulation, "Motif de l'annulation") }}
                    {{ form_widget(form.motifAnnulation, {'attr': {'class': 'form-control', 'placeholder': "Motif d'annulation de la sortie"}}) }}
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-danger btn-block">
                        Annuler la sortie
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
