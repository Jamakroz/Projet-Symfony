{# templates/home/editerSortie.html.twig #}
{% extends 'base.html.twig' %}


{% block title %}{% if sortie.id is not null %}Modifier Sortie{% else %}Ajouter Sortie{% endif %}{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    {% for error in errors %}
        <li>{{ error.message }}</li>
    {% endfor %}
    <div class="container mt-4">
        <h1>Annuler une sortie</h1>
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form, {'attr': {'class': 'mt-3'}}) }}

                <div class="form-group">
                    {{ form_label(form.motifAnnulation, "Motif de l'annulation") }}
                    {{ form_widget(form.motifAnnulation, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la Sortie'}}) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Annuler la sortie
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
