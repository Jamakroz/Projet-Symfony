{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="container p-2">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Inscription
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.prenom) }}
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                            <small class="form-text text-muted">{{ form_help(form.prenom) }}</small>
                            {{ form_errors(form.prenom) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            <small class="form-text text-muted">{{ form_help(form.nom) }}</small>
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.telephone) }}
                            {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                            <small class="form-text text-muted">{{ form_help(form.telephone) }}</small>
                            {{ form_errors(form.telephone) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.mail) }}
                            {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                            <small class="form-text text-muted">{{ form_help(form.mail) }}</small>
                            {{ form_errors(form.mail) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.pseudo) }}
                            {{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
                            <small class="form-text text-muted">{{ form_help(form.pseudo) }}</small>
                            {{ form_errors(form.pseudo) }}
                        </div>
                        <div class="form-group">
{#                            {{ form_label(form.password) }}#}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                            <small class="form-text text-muted">{{ form_help(form.password) }}</small>
                            {{ form_errors(form.password) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form._token, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <button type="submit" class="btn btn-success">Ajouter</button>
                        {{ form_end(form)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}