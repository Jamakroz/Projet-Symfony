{% extends 'base.html.twig' %}

{% block title %}Modification du profil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="avatar img-circle img-thumbnail" alt="avatar">
                    <h6 class="mt-2">Modifier la photo de profil</h6>
                    {{ form_widget(form.photo, {'attr': {'class': 'form-control mt-2'}}) }}
                    {{ form_label(form.changeProfilePicture) }}
                    {{ form_widget(form.changeProfilePicture) }}
                </div>
            </div>

            <!-- edit form column -->
            <div class="col-md-9 personal-info">
                <h3 class="mb-4">Informations</h3>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group row">
                    {{ form_label(form.pseudo, 'Pseudo:', {'label_attr': {'class': 'col-lg-3 col-form-label'}}) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.prenom, 'Prénom:', {'label_attr': {'class': 'col-lg-3 col-form-label'}}) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.nom, 'Nom de famille:', {'label_attr': {'class': 'col-lg-3 col-form-label'}}) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.telephone, 'Téléphone:', {'label_attr': {'class': 'col-lg-3 col-form-label'}}) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.mail, 'Email:', {'label_attr': {'class': 'col-lg-3 col-form-label'}}) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.exPassword, 'Mon mot de passe:', {'label_attr': {'class': 'col-lg-3 col-form-label'}}) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.exPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.site, 'Site:', {'label_attr': {'class': 'col-lg-3 col-form-label'}}) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.site, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row mt-4">
                    <div class="col-lg-9 offset-lg-3">
                        <a href="{{ path('app_ModifPassword') }}" class="btn btn-primary mr-2">Modifier le Mot de Passe</a>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
