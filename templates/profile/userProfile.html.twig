{% extends 'base.html.twig' %}

{% block title %}Modification du profil{% endblock %}

{% block body %}
    <div class="container bootstrap snippets bootdey text-center" style="margin-top: 100px; margin-bottom: 100px;">
        <h1 class="text-primary">Profile</h1>
        <hr>
        <div class="row">
            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png"
                         class="avatar img-circle img-thumbnail" alt="avatar">
                </div>
            </div>

            <!-- edit form column -->
            <div class="col-md-9 personal-info">
                <h3>Information</h3>
                <div class="form-group">
                    {{ userProfile.pseudo }}
                    {{ userProfile.nom }}
                    {{ userProfile.prenom }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
