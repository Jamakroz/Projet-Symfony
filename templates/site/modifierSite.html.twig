{% extends 'base.html.twig' %}

{% block title %}Modifier un site{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modifier un site</h1>
        <div class="row">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nom, 'Nom du site:', {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
                <div class="col-lg-8">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-8">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </div>
            {{ form_end(form) }}
{#            <a href="{{ path('liste_des_sites') }}" class="btn btn-primary">Retour</a>#}
        </div>
    </div>
{% endblock %}
