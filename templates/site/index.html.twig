{% extends 'base.html.twig' %}

{% block title %}Liste des Sites{% endblock %}

{% block body %}
    <h1 class="site-title">Liste des Sites</h1>

    {# Liste des sites existants #}
    {% if sites is not empty %}
        <ul>
            {% for site in sites %}
                <li>
                    {{ site.nom }}
                    <a href="{{ path('app_site_modifier', {'id': site.id}) }}">Modifier</a>
                    <a href="{{ path('app_site_supprimer', {'id': site.id}) }}"
                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce site?')">Supprimer</a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun site trouvé.</p>
    {% endif %}

    {# Formulaire pour créer un site #}
    <form class="site-form">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.nom, 'Nom du site') }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du site'}}) }}
        </div>
        <input type="submit" value="Créer">
        {{ form_end(form) }}
    </form>

{% endblock %}
