{% extends 'base.html.twig' %}

{% block title %}Liste des Sites{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Liste des Sites</h1>

        {# Liste des sites existants #}
        {% if sites is not empty %}
            <ul class="list-group">
                {% for site in sites %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ site.nom }}
                        <div class="btn-group">
                            <a href="{{ path('app_site_modifier', {'id': site.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                            <a href="{{ path('app_site_supprimer', {'id': site.id}) }}"
                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce site?')"
                               class="btn btn-danger btn-sm">Supprimer</a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="alert alert-info mt-4" role="alert">
                Aucun site trouvé.
            </div>
        {% endif %}

        <div class="card mt-5">
            <div class="card-header">
                Créer un Nouveau Site
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_widget(form, {'attr': {'class': 'form-control mb-2'}}) }}
                <input type="submit" class="btn btn-primary" value="Créer">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
